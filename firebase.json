{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "redirects": [
      {
        "source" : "/",
        "destination" : "/app",
        "type" : 301
      }
    ],
    "rewrites": [
      {
        "source": "/app",
        "destination": "/index.html"
      },
      {
        "source": "/app/**",
        "destination": "/index.html"
      },
      {
        "source": "/api",
        "function": "app"
      },
      {
        "source": "/api/**",
        "function": "app"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
